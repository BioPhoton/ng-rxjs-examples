{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@@rxjs-examples/polling/feature-shell": [
        "libs/polling/feature-shell/src/index.ts"
      ],
      "@@rxjs-examples/polling/feature-simple": [
        "libs/polling/feature-simple/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
